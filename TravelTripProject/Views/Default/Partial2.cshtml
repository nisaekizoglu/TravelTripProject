﻿@using TravelTripProject.Models.Entities
@model List<Blog>
@foreach (var x in Model)
{
    <div class="right">
        <div class="bot-left">
            <img src="@x.BlogWrite" alt="" style="width:400px;height:200px" />
        </div>
        <div class="left-text">
            <h4>@x.Title</h4>
            <span class="doller">@x.Tarih.ToString("dd.MM.yyyy")</span>
            <p>@x.Description.Substring(0, 80)...</p>
            <p><a href="~/Blog/BlogDetail/@x.BlogId"><span class="read">Devamını Oku>></span></a></p>
        </div>
    </div>

}
