@model TravelTripProject.Models.Entities.Blog
@{
    ViewBag.Title = "GetBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("UpdateBlog", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.BlogId)
    @Html.TextBoxFor(x => x.BlogId, new { @class = "form-control", @readonly="readonly" })
    <br />
    @Html.LabelFor(x => x.Title)
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Tarih)
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Description)
    @Html.TextAreaFor(x => x.Description,10,1, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.BlogWrite)
    @Html.TextBoxFor(x => x.BlogWrite, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Blog Güncelle</button>
}

