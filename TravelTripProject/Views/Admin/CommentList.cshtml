@using TravelTripProject.Models.Entities
@model List<Comment>
@{
    ViewBag.Title = "CommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CommentId</td>
            <td>@item.UserName</td>
            <td>@item.Mail</td>
            <td>@item.Comments</td>
            <td>@item.Blog.Title</td>
            <td><a href="/Admin/DeleteComment/@item.CommentId" class="btn btn-danger>Sil</a></td>
            <td><a href="/Admin/GetComment/@item.CommentId" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }

</table>